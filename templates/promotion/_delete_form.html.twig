<form method="post" action="{{ path('app_promotion_delete', {'codepromo': promotion.codepromo}) }}"
      onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ promotion.codepromo) }}">
    <button class="btn btn-sm bg-danger-light"><i class="fa fa-trash" style="font-size:17px"></i></button>
</form>