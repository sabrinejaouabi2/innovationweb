    th, td {
        text-align: left;

    }

    th {
        background-color: #ddd;
    } #}
    {#   table {
        border-collapse: collapse;
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

#}

    .btn-add {
        display: inline-block;
        border-radius: 4px;
        background-color: #007bff;
        color: #fff;
        font-size: 16px;
        padding: 12px 20px;
        transition: all 0.3s ease;
        text-decoration: none;
        border: none;
        width: 100px;
    }

    .btn-add:hover {
        background-color: #0062cc;
        color: #fff;
        transform: translateY(-3px);
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
    }


    table {
        border-collapse: collapse;
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        background-color: #fff;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    th, td {
        text-align: center;
        padding: 10px;
    }

    th {
        background-color: #5eb5e0;
        color: #fff;
        text-transform: uppercase;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .btn-add {
        background-color: #5eb5e0;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .btn-add:hover {
        background-color: #4ca7d0;
    }

</style>

<div class="page-wrapper">
    <div class="content container-fluid pb-0">
        <h4 class="mb-3">Dashbord</h4>
        <div class="row">
            <div class="page-header">
                <div class="row align-items-center">
                    <div class="col-md-12 d-flex justify-content-end">
                        <div class="text-right">
                            <a class="btn btn-primary btn-add" href="{{ path('app_admin') }}">
                                <i class="feather-plus-square me-1"></i>
                                Retours
                            </a>
                        </div>

                    </div>
                </div>
            </div>
            <br> <br>
<body style="background-color: #5eb5e0">
<h1 align="center">les reclamations</h1>

    <table >
        <thead>
        <tr>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Mail</th>
            <th>Recldate</th>
            <th>Recldescription</th>
            <th>Type</th>
        </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}

            {% if reclamation.type == 'freelance' %}
                <tr style="background-color: #A766E8;">
            {% else %}
                <tr style="background-color: #E1A9C1;">
            {% endif %}
                <td>{{ reclamation.nom }}</td>
                <td>{{ reclamation.prenom }}</td>
                <td>{{ reclamation.mail }}</td>
                <td>{{ reclamation.recldate ? reclamation.recldate|date('Y-m-d') : '' }}</td>
                <td>{{ reclamation.recldescription }}</td>
                <td>{{ reclamation.type }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</body>
</html>


