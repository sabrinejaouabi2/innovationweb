{# templates/user/show_all_users.html.twig #}
{% extends 'frontClient.html.twig' %}

{% block title %}
    <h1>All Users</h1>
{% endblock %}

{% block content %}
    <style>
        .user-cards-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            margin-top: 20px;
        }

        .user-card {
            background-color: #f8f9fa;
            border: 1px solid #ced4da;
            border-radius: 8px;
            padding: 16px;
            margin: 16px;
            width: 500px;
            text-align: center;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s ease-in-out;
        }

        .user-card:hover {
            transform: scale(1.05);
        }

        .user-card h3 {
            color: #007bff;
        }

        .user-card p {
            color: #6c757d;
        }

        .like-dislike-container {
            margin-top: 10px;
            display: flex;
            justify-content: space-around;
            align-items: center;
        }

        .like-button{
            background-color: #28a745;
            color: #fff;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s ease-in-out;
        }
        .dislike-button {
            background-color:   #dc3545;
            color: #fff;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s ease-in-out;
        }
        .person-icon {
            font-size: 24px;
            color: #007bff;
        }

    </style>

    <h2>All Users</h2>
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('danger') %}
        <div class="alert alert-danger">
            {{ flashMessage }}
        </div>
    {% endfor %}
    <div class="user-cards-container">
        {% for user in users %}
            <div class="user-card">
                <i class="fas fa-user person-icon"></i>
                <h3>{{ user.NomComplet }}</h3>
                <!-- Ajoutez ici les détails supplémentaires que vous souhaitez afficher -->
                <p>Email: {{ user.email }}</p>
                <!-- Ajoutez d'autres informations utilisateur -->

                <!-- Container pour les boutons Like et Dislike -->
                <div class="like-dislike-container">
                    <!-- Like button -->
                    <a href="{{ path('handle_interaction', {'id': user.id, 'liked': true}) }}" class="like-button">Like</a>

                    <!-- Dislike button -->
                    <a href="{{ path('handle_interaction', {'id': user.id, 'liked': false}) }}" class="dislike-button">Dislike</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
